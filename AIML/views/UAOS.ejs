        // Add this script right before the closing </body> tag

// Function to save scroll position to localStorage
function saveScrollPosition() {
    localStorage.setItem('scrollPosition', window.scrollY);
}

// Function to restore scroll position
function restoreScrollPosition() {
    const scrollPosition = localStorage.getItem('scrollPosition');
    if (scrollPosition) {
        window.scrollTo(0, parseInt(scrollPosition));
        // Clear the stored position after restoring
        localStorage.removeItem('scrollPosition');
    }
}

// Save scroll position before any form submission or action that reloads the page
document.addEventListener('click', function(event) {
    // Check if the clicked element is a button that triggers page reload
    if (event.target.classList.contains('attendance-btn') || 
        event.target.classList.contains('control-btn') ||
        event.target.classList.contains('submit-btn')) {
        saveScrollPosition();
    }
});

// Restore scroll position when page loads
document.addEventListener('DOMContentLoaded', function() {
    restoreScrollPosition();
});

// Modify existing action functions to save scroll position

// Update original updateAttendance function
async function updateAttendance(roll_number) {
    saveScrollPosition(); // Save position before making request
    
    fetch('/updateAttendance', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({roll_number})
    }).then(response => response.json()).then(data => {
        if(data.success == true) {
            console.log('success');
            window.location.href = data.redirect;
        } else {
            alert('something went wrong! please try again!');
        }
    }).catch(err => console.log(err));
}

// Update original updateTotalClass function
async function updateTotalClass(student) {
    saveScrollPosition(); // Save position before making request
    
    const students = student;
    console.log(students);
    const response = await fetch('/updateTotalClasses', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ students })
    });

    const data = await response.json();
    if (data.success) {
        alert("Total classes incremented!");
        window.location.href = data.redirect;
    } else {
        alert("Something went wrong while updating total classes.");
    }
}

// Update original markAllPresent function
async function markAllPresent(student) {
    saveScrollPosition(); // Save position before making request
    
    const students = student;
    console.log(students);
    const response = await fetch('/mark-all-present', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ students })
    });

    const data = await response.json();
    if (data.success) {
        alert("marked all as present!");
        window.location.href = data.redirect;
        document.body.style.overflow = 'auto';
    } else {
        alert("Something went wrong while updating total classes.");
    }

    document.body.style.overflow = 'auto';
}



     async function fetchDoubts() {
      try {
        const res = await fetch('/unclarified-doubts');
        const doubts = await res.json();

    const name = '<%= faculty.faculty_name%>';



        const tbody = document.querySelector('#doubtTable tbody');
        tbody.innerHTML = ''; // Clear existing rows

        doubts.forEach((doubt, index) => {
          const tr = document.createElement('tr');

          const fname = doubt.faculty_name;

          if(fname == name){

          tr.innerHTML = `
            <td>${doubt.roll_number}</td>
            <td>${doubt.subject}</td>
            <td>${doubt.doubt}</td>
            <td><textarea id="clarification-${index}"></textarea></td>
            <td><button onclick="clarify('${doubt.roll_number}','${doubt.faculty_name}','${doubt.subject}','${doubt.doubt}', ${index})">Clarify</button></td>
          `;

          tbody.appendChild(tr);

          }
        });
      } catch (err) {
        console.error('Error fetching doubts:', err);
      }
    }

    async function clarify(roll_number,faculty_name,subject,doubt,index) {
      const clarification = document.getElementById(`clarification-${index}`).value.trim();

      if (!clarification) {
        alert("Please enter a clarification before submitting.");
        return;
      }

      try {
        const res = await fetch('/clarification', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ roll_number, faculty_name,subject,doubt,clarification })
        });

        const result = await res.json();
        if (result.success) {
          alert("Clarification submitted!");
          fetchDoubts(); // Refresh the table
        } else {
          alert("Failed to clarify. Please try again.");
        }
      } catch (err) {
        console.error('Clarification error:', err);
        alert("Server error.");
      }
    }

    // Load doubts on page load
    fetchDoubts();
    </script>
