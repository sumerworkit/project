<body>
    <header>
        <div class="container header-content">
            <div class="logo">Student Portal</div>
            <div class="user-actions">
                <span class="user-name">Welcome, <%=data.student_name%></span>
                <button class="logout-btn" onclick="logout()">Logout</button>
            </div>
        </div>
    </header>
    
    <div class="container main-content">
        <div class="dashboard-card">
            <div class="card-header">
                <h2 class="card-title">Student Information</h2>
                <span class="semester" id="time"></span>
            </div>
            
            <div class="student-details">
                <div class="detail-item">
                    <div class="detail-label">Full Name</div>
                    <div class="detail-value"><%=data.student_name%></div>
                </div>
                
                <div class="detail-item">
                    <div class="detail-label">Roll Number</div>
                    <div class="detail-value"><%=data.roll_number%></div>
                </div>
                
                <div class="detail-item">
                    <div class="detail-label">Branch</div>
                    <div class="detail-value"><%=data.branch%></div>
                </div>
                
                <div class="detail-item">
                    <div class="detail-label">Year</div>
                    <div class="detail-value"><%=data.year%> year</div>
                </div>
                
                <div class="detail-item">
                    <div class="detail-label">Section</div>
                    <div class="detail-value"><%=data.section%></div>
                </div>
            </div>
        </div>
            <button id="ask-doubt-btn">Ask Doubt</button>

<!-- The modal/popup form -->
<div id="doubt-modal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h3>Ask Your Doubt</h3>
      <div class="form-group">
      <form id="doubt-form" action="/doubt-student" method="POST">
      <label for="faculty_name">Faculty Name</label>
        <input id="faculty_name" name="faculty_name"  required></input>
        <label for="subject">subject</label>
        <input id="subject" name="subject"  required></input>
        <label for="roll_number">Roll Number</label>
        <input id="roll_number" name="roll_number" value='<%= data.roll_number %>'  readOnly></input>
        <label for="doubt">Your Doubt</label>
        <textarea id="doubt" name="doubt" placeholder="Type your doubt here..." required></textarea>
         <button type="submit" class="submit-btn">Submit</button>
    </form>
      </div>
     
  </div>
</div>

<div class="message-icon" id="message-icon">
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
  </svg>
</div>

<!-- Details Screen -->
<div class="details-screen" id="details-screen">
  <div class="details-container">
    <div class="details-header">
      <h3>Doubt Details</h3>
      <button onClick="reset()"> * </button>
    </div>
    <div class="details-content">
     <div class="doubt-table-container">
    <table class="doubt-table">
        <h2 align="center">  Doubt Section </h2>
        <thead>
            <tr>
                <th>Faculty Name</th>
                <th>Roll Number</th>
                <th>Subject</th>
                <th>Doubt</th>
                <th>Clarify</th>
            </tr>
        </thead>
        <tbody>
            <% if(doubt) {%>
                <% doubt.forEach(doubt => { %>
                <% if((doubt.clarified)) {%>
                <tr>
                    <td><%= doubt.faculty_name %></td>
                    <td><%= doubt.roll_number %></td>
                    <td><%= doubt.subject %></td>
                    <td><%= doubt.doubt %></td>
                    <td><%= doubt.clarification %></td>
                </tr>
                <% } %>
                <% }) %>
                <% } else {  %>
            <tr>
                <td>Dr. Johnson</td>   
                <td>CSM2001</td>
                <td>Data Structures</td>
                <td>How to implement AVL tree rotations?</td>
                <td><button class="clarify-btn" onclick="clarifyDoubt(1)">Clarify</button></td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>
      
      
    </div>
  </div>
</div>

        
        <div class="dashboard-card attendance-overview">
            <div class="card-header">
                <h2 class="card-title">Attendance Overview</h2>
            </div>
            
            <div class="attendance-header">
                <div class="overall-attendance">
                    <div class="percentage"><%=((data.attended_classes)/(data.total_classes ))  * 100  %> %</div>
                    <div class="attendance-label">Overall Attendance</div>
                </div>
                <div class="overall-attendance">
                    <div class="percentage"><%=data.attended_classes %>/<%=data.total_classes  %></div>
                    <div class="attendance-label">Classes Attended</div>
                </div>
            </div>
            
            <table class="subjects-table">
                <thead>
                    <tr>
                        <th>Subjects</th>
                        
                    </tr>
                </thead>
                <tbody>
                   <% data.subjects.forEach(data => { %>
                    <tr>
                        <td><%=data%></td>
                        </tr>
                        <% })%>
                </tbody>
            </table>
        </div>
    </div>
    

    
    <script>
        function logout() {
            alert("Logging out... You will be redirected to the login page.");
            // In a real application, this would handle the logout process and redirect
             window.location.href = "/studentLogin";
        }

        const modal = document.getElementById("doubt-modal");

// Get the button that opens the modal
const btn = document.getElementById("ask-doubt-btn");

// Get the <span> element that closes the modal
const span = document.getElementsByClassName("close")[0];

// When the user clicks the button, open the modal
btn.onclick = function() {
  modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
  modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}



const messageIcon = document.getElementById('message-icon');
const detailsScreen = document.getElementById('details-screen');
const closeDetails = document.getElementById('close-details');

// Show details screen when message icon is clicked
messageIcon.addEventListener('click', function() {
  detailsScreen.style.display = 'block';
  document.body.style.overflow = 'hidden'; // Prevent scrolling when modal is open
});

// Hide details screen when close button is clicked
closeDetails.addEventListener('click', function() {
  detailsScreen.style.display = 'none';
  document.body.style.overflow = 'auto'; // Restore scrolling
});

// Hide details screen when clicking outside the details container
detailsScreen.addEventListener('click', function(event) {
  if (event.target === detailsScreen) {
    detailsScreen.style.display = 'none';
    // Restore scrolling
  }
});


document.getElementById('doubt-form').addEventListener('submit', function(e) {
  e.preventDefault();

  const faculty_name = document.getElementById('faculty_name').value;
  const subject = document.getElementById('subject').value;
  const doubt = document.getElementById('doubt').value;
  const roll_number = '<%= data.roll_number %>'; // if rendered via EJS

  const modal = document.getElementById('doubt-modal');

  fetch('/doubt-student', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify({ faculty_name, subject, doubt, roll_number })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success === true) {
      alert('Doubt submitted successfully!');
      modal.style.display = 'none';
    } else {
      alert('Something went wrong! Please try again.');
    }
  })
  .catch(err => console.log(err));
});

function reset() {
 const element = document.getElementById('details-screen');

 element.style.display = 'none';
 window.location.reload();
  }
    </script>
